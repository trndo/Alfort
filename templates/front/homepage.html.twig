{% extends 'base.html.twig' %}
{% block title %}Головна{% endblock %}
{% block body %}

    <select onchange="window.location.href=this.value" >
        <option value="{{ path('homePage',{ _locale: 'ru'}) }}">ru</option>
        <option value="{{ path('homePage',{ _locale: 'en'}) }}">en</option>
    </select>
    <div class="container">
        <div class="row">
            <div class="col-md-10 offset-md-1 ">
                 <h2 class="title">{{ dataHomePage.0.title }}</h2>
                <p>{{dataHomePage.0.aboutUs}}</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10 offset-md-1 ">
                <h2 class="title">{{ dataHomePage.1.title }}</h2>
                <div class="img_wrap">
                    <img class="img-responsive" src="/images/fura.jpg">
                </div>
                <p>{{dataHomePage.1.aboutUs}}</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <h2 class="title">{{ dataHomePage.2.title }}</h2>
                <p>{{dataHomePage.2.aboutUs}}</p>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md align-self-end area1">
                    <div class="block1">
                        <h5 class="text-center" >{% trans %}Швидкість{% endtrans %}</h5>
                    </div>
                </div>
                <div class="col-md align-self-start area2">
                    <div class="block2">
                        <h5 class="text-center">Надійність</h5>
                    </div>
                </div>
                <div class="col-md align-self-end area3">
                    <div class="block3">
                        <h5 class="text-center">Якість</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}




